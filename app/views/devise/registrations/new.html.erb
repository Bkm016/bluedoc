<%
auth_session = session[:omniauth] || {}
auth_info = auth_session["info"] || {}
if auth_info
  resource.omniauth_provider = auth_session["provider"]
  resource.omniauth_uid = auth_session["uid"]

  resource.email = auth_info["email"] if resource.email.blank?
  resource.name = auth_info["name"] if resource.name.blank?
  if resource.slug.blank?
    resource.slug = auth_info["login"] || auth_info["name"]
  end
end
%>

<div class="container-lg clearfix">
  <div class="col-12 col-md-7">
    <div class="sub-title">
      <div class="heading"><%= icon_tag("user") %> Sign up</div>
      <div class="description">Welcome to use BookLab</div>
    </div>

    <% if auth_info %>
    <div class="flash flash-warn mt-5">
      <strong>Complete your account info</strong>
      <p>You must complete the below form for sign up with <b><%= resource.omniauth_provider&.humanize %></b></p>
      <p>Or if you had a exists BookLab account, you can <%= link_to "Sign in", new_session_path(resource_name) %> to bind account.</p>
    </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "/shared/error_messages", target: resource %>

      <% if auth_info %>
        <%= f.hidden_field :omniauth_provider %>
        <%= f.hidden_field :omniauth_uid %>
        <%= f.hidden_field :name %>
      <% end %>

      <div class="form-group">
        <%= f.label :slug %>
        <%= f.text_field :slug, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary mr-2" %>

        <%= link_to "Already have a account", new_session_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>


