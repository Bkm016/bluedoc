<div class="col-12 clearfix">
  <div class="col-12 col-md-8">
    <div class="sub-title mt-2 mb-4">
      <h3 class="heading"><%= t(".Change password") %></h3>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "/shared/error_messages", target: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t(".New password"), class: "control-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".Confirm new password"), class: "control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".Change my password"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
