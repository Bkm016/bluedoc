<div class="col-12 clearfix">
  <div class="col-12 col-md-5 float-left pr-md-3">
    <div class="Box mb-3">
      <div class="Box-header">
        <h3 class="Box-title">Tools</h3>
      </div>
      <div class="Box-row">
        <a href="<%= admin_settings_path %>" target="_blank" class="btn mb-2"><%= icon_tag("gear") %> Settings</a>
        <a href="/admin/exception-track" target="_blank" class="btn mb-2"><%= icon_tag("error") %> Exceptions</a>
        <a href="/admin/sidekiq" target="_blank" class="btn mb-2"><%= icon_tag("server") %> Background Jobs</a>
        <a href="/admin/pghero" target="_blank" class="btn mb-2"><%= icon_tag("dashboard") %> Database Stats</a>
      </div>
      <div class="Box-row">
        <a href="<%= reindex_admin_dashboard_path %>" data-method="post" class="btn">Rebuild Search Index</a>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-7 float-left">
    <div class="Box mb-3">
      <div class="Box-header">
        <h3 class="Box-title">Service statuses</h3>
      </div>
      <ul>
        <% @statuses[:results].each do |status| %>
         <li class="Box-row clearfix">
           <div><span class="name"><%= status[:name]  %></span>
           <span class="float-right <%= status[:status].downcase == "error" ? "text-red" : "text-green" %>"><%= status[:status] %></span></div>
           <div class="message text-red">
             <%= status[:message] %>
           </div>
         </li>
         <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="Box mb-3">
  <div class="Box-header">
    <h3 class="Box-title">Statistics</h3>
  </div>

  <div class="Box-row clearfix">
    <div class="clearfix border-bottom text-center">
      <div class="col-4 float-left p-4">
        <h2 class="text-blue"><%= User.where(type: "User").count %></h2>
        <div class="text-gray-dark">Users</div>
      </div>
      <div class="col-4 float-left p-4">
        <h2 class="text-blue"><%= Group.count %></h2>
        <div class="text-gray-dark">Groups</div>
      </div>
      <div class="col-4 float-left p-4">
        <h2 class="text-blue"><%= Repository.count %></h2>
        <div class="text-gray-dark">Repositories</div>
      </div>
    </div>
    <div class="clearfix text-center">
      <div class="col-3 float-left p-4">
        <h2 class="text-blue"><%= Doc.count %></h2>
        <div class="text-gray-dark">Docs</div>
      </div>
      <div class="col-3 float-left p-4">
        <h2 class="text-blue"><%= Comment.count %></h2>
        <div class="text-gray-dark">Comments</div>
      </div>
      <div class="col-3 float-left p-4">
        <h2 class="text-blue"><%= Notification.count %></h2>
        <div class="text-gray-dark">Notifications</div>
      </div>
      <div class="col-3 float-left p-4">
        <h2 class="text-blue"><%= Activity.count %></h2>
        <div class="text-gray-dark">Activities</div>
      </div>
    </div>
  </div>
</div>
