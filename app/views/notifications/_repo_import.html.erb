<%
  repo = notification.target
%>

<div class="info">
  <%= t(".Repository") %> <%= repository_name_tag(repo) %> <%= t(".has been imported") %> <strong><%= notification.meta[:status] %></strong>
</div>
<span class="time">
  <%= l notification.created_at, format: :short %>
</span>
<% if notification.meta[:status].to_s == "failed" %>
  <div class="detail markdown-body"><pre class="hightlight"><code><%= notification.meta[:message] %></code></pre></div>
<% else %>
  <div class="detail">
    <%= render "/repositories/card", repository: repo %>
  </div>
<% end %>