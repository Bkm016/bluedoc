<%
  comment = notification.target
%>

<% if comment %>
<div class="info">
  <%= user_name_tag(notification.actor) %> <%= t(".was posted a comment on") %>
  <%= link_to comment.commentable_title, notification_url(notification.id) %>
</div>
<span class="time">
  <%= l notification.created_at, format: :short %>
</span>

<div class="detail markdown-body">
  <%= sanitize_html comment.body_html %>
</div>
<% else %>
<%= t("notifications.Notification been deleted") %>
<% end %>