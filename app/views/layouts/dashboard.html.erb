<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= content_for?(:title) ? yield(:title) : "BookLab" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="locale" content="<%= I18n.locale %>">
    <meta name="viewport" content="width=device-width">
    <% if current_user %>
    <meta name="current-user" value="<%= current_user.slug %>" />
    <% end %>
    <%= stylesheet_pack_tag 'booklab', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="/js/jquery@3.3.1.js"></script>
    <script type="text/javascript" src="/js/rails-ujs@5.2.1.js"></script>
    <script type="text/javascript" src="/js/turbolinks@5.2.0.js"></script>
    <script type="text/javascript" src="/js/react.production.min@16.6.1.js"></script>
    <script type="text/javascript" src="/js/react-dom.production.min@16.6.1.js"></script>
    <script type="text/javascript" src="/js/react-dom-server.browser.production.min@16.6.1.js"></script>
    <%= javascript_pack_tag 'vendors', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="page-<%= controller_name %> d-flex flex-column">
    <%= render "/layouts/header" %>
    <%= notice_message %>
    <%= yield :subnav %>
    <div class="main-container">
      <%= yield %>
    </div>
    <div class="footer">
      <div class="container">
        <%= raw Setting.application_footer_html %>
      </div>
    </div>
  </body>
</html>
