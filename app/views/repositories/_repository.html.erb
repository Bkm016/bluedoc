<div class="repository-item border-bottom py-3">
  <div class="d-inline-block mb-1">
    <h4>
      <% if defined?(current_group) && current_group.id != repository.user_id %>
      <%= user_name_tag(repository.user) %> <span class="divider">/</span>
      <% end %>
      <%= repository_name_tag(repository) %></h4>
  </div>
  <div class="text-gray mb-2 pr-4">
    <%= repository.description %>
  </div>
  <div class="f6 text-gray mt-2">
    <%= l repository.updated_at, format: :short %>
  </div>
</div>
