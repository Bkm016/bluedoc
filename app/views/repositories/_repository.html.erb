<ul class="list-container repository-list">
  <% items.each do |item| %>
    <li class="list-item repository-item">
      <div class="title">
        <% if defined?(current_group) && current_group.id != item.user_id %>
        <%= user_name_tag(item.user) %> <span class="divider">/</span>
        <% end %>
        <%= repository_name_tag(item) %>
        <% if item.private? %>
          <span class="label-private ml-2">Private</span>
        <% end %>
      </div>
      <div class="description">
        <%= truncate item.description, length: 150 %>
      </div>
       <div class="info">
        <span class="stars">
          <%= icon_tag("star") %> <%= item.stars_count %>
        </span>
      </div>
      <div class="time-box">
        <%= timeago item.updated_at %>
      </div>
    </li>
  <% end %>
</ul>
