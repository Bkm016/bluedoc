<% if doc %>
  <div class="doc-item list-item list-avatar" id="doc-<%= doc.id %>">
    <div class="avatar-box icon-box icon-doc">
      <%= icon_tag('docs') %>
    </div>
    <div class="title">
      <%= doc_title_tag(doc) %>
      <% if doc.share %>
        <span class="doc-icon-share tooltipped tooltipped-ne" aria-label="<%= t(".Sharing") %>"><i class="fas fa-share"></i></span>
      <% end %>
    </div>
    <span class="time-box tooltipped tooltipped-ne" aria-label="<%= t(".Last updated at") %>"><i class="fas fa-clock"></i> <%= timeago doc.body_updated_at %></span>
    <div class="info">
      <div class="desc text-gray pr-4">
        <% if @repository && doc.repository_id != @repository.id %>
        <span class="repo mr-1">
          <%= user_name_tag(doc.repository&.user) %> <span class="divider">/</span>
          <%= repository_name_tag(doc.repository) %>
        </span>
        <% end %>
        <span class="editor mr-1">
          <%= user_name_tag(doc.last_editor) %>
        </span>
      </div>
    </div>
    <div class="action text-gray">
      <% if can? :destroy, doc %>
        <%= link_to icon_tag("trash"), doc.to_path, data: { method: :delete, remote: true, confirm: t(".Are you sure delete this Doc?") }, class: "btn-link btn-remove-doc" %>
      <% end %>
    </div>
  </div>
<% end %>
