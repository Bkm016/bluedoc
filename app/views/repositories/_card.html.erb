<div class="repository-card">
  <span class="f4 lh-condensed text-gray-dark">
    <% if defined?(current_group) && current_group.id != repository.user_id %>
    <%= user_name_tag(repository.user) %> <span class="divider">/</span>
    <% end %>
    <%= repository_name_tag(repository) %>
  </span>
  <div class="desc text-gray mb-2 pr-4">
    <%= repository.description %>
  </div>
  <div class="f6 text-gray mt-2">
    <span class="counter"><%= icon_tag("star") %> <%= repository.stars_count %></span>
    <span class="updated"><%= t("updated at") %> <%= timeago repository.updated_at %></span>
  </div>
</div>
