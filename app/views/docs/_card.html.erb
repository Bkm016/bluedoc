<% if doc %>
  <div class="doc-card">
    <div class="d-inline-block mb-1 doc-title">
      <%= doc_title_tag(doc) %>
    </div>
    <div class="desc text-gray f6">
      <span class="path">
        <%= user_display_name_tag(doc.repository&.user) %> / 
        <%= repository_name_tag(doc.repository) %>
      </span>
    </div>
  </div>
<% end %>
