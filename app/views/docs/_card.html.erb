<% if doc %>
  <div class="doc-card">
    <div class="d-inline-block mb-1">
      <h4 class="doc-title">
        <%= doc_title_tag(doc) %>
      </h4>
    </div>
    <div class="desc">
      <%= user_name_tag(doc.repository&.user) %> <span class="divider">/</span>
      <%= repository_name_tag(doc.repository) %>
    </div>
  </div>
<% end %>
