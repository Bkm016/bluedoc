<% if @repositories.blank? %>
<div class="blankslate">
  <p>You does not have any <%= action_name.singularize %> repositories.
</div>
<% else %>

<div class="dashboard-repos d-flex d-flex-column flex-wrap" data-action-button-reload>
  <% @repositories.each do |repo| %>
  <div class="recent-repo-item Box">
    <div class="Box-body">
      <div class="infos">
        <div class="title"><%= icon_tag("repository") %> <%= repository_path_tag(repo) %></div>
        <div class="description">
          <%= truncate repo.description, length: 100 %>
        </div>
        <div class="info">
          <% if action_name == "stars" %>
            <%= action_button_tag(repo, :star, undo: true) %>
          <% else %>
            <%= action_button_tag(repo, :watch, icon: :eye, undo: true) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
