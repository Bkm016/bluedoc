<% if items.blank? %>
<div class="blankslate">
  <p>You does not have any groups.</p>
</div>
<% else %>
<ul class="dashboard-groups list-container">
  <% items.each do |item| %>
  <li class="recent-group-item list-item list-avatar">
    <div class="title">
      <%= user_avatar_tag(item, style: :tiny) %>
      <%= group_name_tag(item) %>
    </div>
    <div class="description">
      <%= truncate item.description, length: 100 %>
    </div>
    <div class="info">
      <span class="members"><%= icon_tag("user") %> <%= item.members_count %></span>
    </div>
    <div class="time-box"><%= timeago item.created_at %></div>
  </li>
  <% end %>
</ul>
<% end %>