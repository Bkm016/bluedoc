<% title_tag "Docs", "Dashboard" %>

<div class="col-12 d-table">
  <%= render "menu" %>

  <div class="col-10 d-table-cell p-5">
    <div class="sub-title">Recent docs</div>
    <% if @user_actives.blank? %>
      <div class="blankslate">
        <h3>No recent docs</h3>
        <p>You does not have updated Doc in recently.</p>
      </div>
    <% else %>
      <%= render partial: "docs", locals: { items: @user_actives } %>
      <%= paginate @user_actives %>
    <% end %>
  </div>
</div>
