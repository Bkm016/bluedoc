<% if @docs.blank? %>
<div class="blankslate">
  <p>You does not have any <%= action_name.singularize %> docs.
</div>
<% else %>

<ul class="cards-container recent-docs">
  <% @docs.each do |doc| %>
    <li class="card Box recent-doc-item">
      <div class="path">
        <%= repository_path_tag(doc.repository) %>
      </div>
      <div class="float-right"><%= action_button_tag(doc, :star, undo: true) %></div>
      <div class="title">
        <%= doc_title_tag(doc) %>
      </div>
    </li>
  <% end %>
</ul>

<% end %>
