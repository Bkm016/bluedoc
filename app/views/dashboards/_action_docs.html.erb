<% if @docs.blank? %>
<div class="blankslate">
  <p>You does not have any <%= action_name.singularize %> docs.
</div>
<% else %>

<ul class="list-container recent-docs">
  <% @docs.each do |doc| %>
    <li class="list-item list-avatar recent-doc-item">
      <%= user_avatar_tag(doc.repository&.user, style: :small, link: false) %>
      <div class="title">
        <%= doc_title_tag(doc) %>
      </div>
      <div class="path">
        <%= repository_path_tag(doc.repository) %>
      </div>
      <div class="action"><%= action_button_tag(doc, :star, undo: true) %></div>
      <div class="time-box">
        <%= timeago doc.updated_at %>
      </div>
    </li>
  <% end %>
</ul>
<% end %>
