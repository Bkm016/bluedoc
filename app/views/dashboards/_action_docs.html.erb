<% if @docs.blank? %>
<div class="blankslate">
  <p>You does not have any <%= action_name.singularize %> docs.
</div>
<% else %>

<ul class="recent-docs Box">
  <% @docs.each do |doc| %>
    <li class="recent-doc-item Box-row py-2">
      <div class="icon-box">
        <%= icon_tag "doc" %>
      </div>
      <div class="mt-2 float-right"><%= action_button_tag(doc, :star, undo: true) %></div>
      <div class="title">
        <%= doc_title_tag(doc) %>
      </div>
      <div class="info clearfix">
        <%= repository_path_tag(doc.repository) %>
      </div>
    </li>
  <% end %>
</ul>

<% end %>
