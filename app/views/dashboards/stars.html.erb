<% title_tag t(".Stars"), t(".Dashboard") %>

<%= render "menu" %>

<div class="flex-wrap">
  <div class="main-wrap">
    <div class="main-content">
      <div class="col-12 col-md-2 float-left pr-md-4">
        <details class="aside-content details-reset menu js-menu">
          <summary><%= icon_tag("menu") %></summary>
          <nav>
          <%= render_list_items(type: :link, class: "menu-item", active_class: "selected", check_parameters: true) do |item|
            item << link_to(icon_tag("star-repo", label: t(".Repository")), "/dashboard/stars", class: "menu-item")
            item << link_to(icon_tag("star-doc", label: t(".Doc")), "/dashboard/stars?tab=docs", class: "menu-item")
            item << link_to(icon_tag("star-note", label: t(".Note")), "/dashboard/stars?tab=notes", class: "menu-item")
          end %>
          </nav>
        </details>
      </div>
      <div class="col-12 col-md-10 float-left">
        <div class="dashboard-content clearfix">
          <% if params[:tab] == "docs" %>
            <%= render "action_docs" %>
            <%= paginate @docs %>
          <% elsif params[:tab] == "notes" %>
            <%= render "action_notes" %>
            <%= paginate @notes %>
          <% else %>
            <%= render "action_repositories" %>
            <%= paginate @repositories %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>