<ul class="list-container recent-docs">
  <% items.each do |item| %>
    <li class="list-item recent-doc-item">
      <div class="title">
        <%= doc_title_tag(item.subject) %>
      </div>
      <div class="path">
        <%= repository_path_tag(item.subject&.repository) %>
      </div>
      <div class="time-box">
        <%= timeago item.updated_at %>
      </div>
    </li>
  <% end %>
</ul>
