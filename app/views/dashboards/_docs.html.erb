<ul class="list-container recent-docs">
  <% items.each do |item| %>
    <li class="list-item list-avatar recent-doc-item">
      <%= user_avatar_tag(current_user, style: :small, link: false) %>
      <div class="title">
        <%= doc_title_tag(item.subject) %>
      </div>
      <div class="path">
        <%= repository_path_tag(item.subject&.repository) %>
      </div>
      <div class="time">
        <%= timeago item.updated_at %>
      </div>
    </li>
  <% end %>
</ul>
