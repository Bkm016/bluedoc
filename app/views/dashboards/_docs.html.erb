<ul class="cards-container recent-docs">
  <% items.each do |item| %>
    <li class="card avatar-card recent-doc-item">
      <%= user_avatar_tag(current_user, style: :small, link: false) %>
      <div class="path">
        <%= repository_path_tag(item.subject&.repository) %>
      </div>
      <div class="title">
        <%= doc_title_tag(item.subject) %>
      </div>
      <div class="info">
        <%= timeago item.updated_at %>
      </div>
    </li>
  <% end %>
</ul>
