<% if items.blank? %>
<div class="blankslate">
  <p><%= t("You does not have any repositories") %></p>
</div>
<% else %>

<ul class="list-container dashboard-repos">
  <% items.each do |item| %>
  <li class="list-item recent-repo-item">
    <div class="title"><%= repository_name_tag(item.subject) %></div>
    <% if item.subject.description.present? %>
    <div class="description">
      <%= truncate item.subject.description, length: 100 %>
    </div>
    <% end %>
    <div class="info">
      <span class="user">
        <%= icon_tag("user") %> <%= user_name_tag(item.subject&.user) %>
      </span>
      <span class="stars">
        <%= icon_tag("star") %> <%= item.subject.stars_count %>
      </span>
      <span class="watches">
        <%= icon_tag("watches") %> <%= item.subject.watches_count %>
      </span>
    </div>
    <div class="time-box">
      <%= timeago item.updated_at %>
    </div>
    <div class="action">
      <% if can? :create_doc, item.subject %>
        <%= link_to icon_tag("add_docs"), item.subject.to_path("/docs/new"), target: "_blank" %>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
<% end %>