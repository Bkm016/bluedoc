<table class="dashboard-table">
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Stars</td>
    <td>Watches</td>
    <td>Last visit</td>
  </tr>
  <% items.each do |item| %>
  <tr class="recent-repo-item">
    <td>
      <%= repository_path_tag(item) %>
    </td>
    <td style="max-width: 200px">
      <%= item.description %>
    </td>
    <td>
      <%= item.stars_count %>
    </td>
    <td>
      <%= item.watches_count %>
    </td>
    <td>
      <%= timeago item.updated_at %>
    </td>
  </tr>
  <% end %>
</table>