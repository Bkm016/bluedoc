<div id="comment-<%= comment.id %>" class="comment" data-parent-id="<%= comment.parent_id %>">
  <div class="avatar-box">
    <%= user_avatar_tag(comment.user, style: :small) %>
  </div>
  <div class="comment-infos">
    <div class="info clearfix">
      <%= user_name_tag(comment.user) %>
      <span class="time">
        <%= link_to timeago(comment.created_at), "#comment-#{comment.id}" %>
      </span>
      <div class="opts float-right">
        <% if current_user %>
          <%= render "/reactions/new_button", reaction: Reaction.new(subject: comment) %>
        <% end %>

        <details class="dropdown details-reset details-overlay d-inline-block ml-2">
          <summary aria-haspopup="true">
            <%= icon_tag("ellipsis-v") %>
          </summary>
          <div class="dropdown-menu dropdown-menu-sw">
            <ul>
              <li><clipboard-copy class="dropdown-item btn-link" data-close-dialog data-clipboard-text="<%= request.url %>#comment-<%= comment.id %>">Copy link</clipboard-copy></li>
              <% if current_user %>
                <li><%= link_to "Reply", reply_comment_path(comment), class: "dropdown-item", data: { remote: true, "close-dialog" => true } %></li>
              <% end %>
              <% if can? :destroy, comment %>
                <li class="dropdown-divider"></li>
                <li><%= link_to "Delete", comment_path(comment), class: "dropdown-item", data: { method: 'delete', remote: true, confirm: "Are you sure?", "close-dialog" => true } %></li>
              <% end %>
            </ul>
          </div>
        </details>
      </div>
    </div>

    <div class="markdown-body">
      <%= render "/comments/in_reply", comment: comment %>
      <%= sanitize_html comment.body_html %>
    </div>

    <%= render "/reactions/reactions", subject: comment, reactions: comment.reactions %>
  </div>
</div>
