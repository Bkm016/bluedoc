<% if comment.reply_to %>
<div class="in-reply-to">
  <% if defined? show_body %>
  <div class="in-reply-link">
  <% else %>
  <a href="<%= in_reply_comment_path(comment) %>" class="in-reply-link" data-remote="true">
  <% end %>
    <%= t(".In reply to") %> <%= user_avatar_tag(comment.reply_to.user, style: :tiny, link: false) %> <span class="user-name"><%= comment.reply_to.user&.slug %></span> <span class="comment-id">#comment-<%= comment.parent_id %></a>
    <% if defined? show_body %>
    <div class="body"><%= sanitize_html(comment.reply_to.body_html) %></div>
    <% end %>

  <% if defined? show_body %>
  </div>
  <% else %>
  </a>
  <% end %>
</div>
<% end %>