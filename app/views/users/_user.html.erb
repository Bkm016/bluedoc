<div class="user-item list-item list-avatar">
  <div class="avatar-box">
    <%= user_avatar_tag(user, style: :medium) %>
  </div>
  <div class="title"><%= user_display_name_tag(user) %></div>
  <div class="description"><%= user_name_tag(user) %></div>
  <% if user.description.present? %>
    <div class="info mt-1 text-gray text-overflow"><%= user.description %></div>
  <% end %>
  <div class="action">
    <%= follow_user_tag(user, class: "btn btn-sm btn-light") %>
  </div>
</div>