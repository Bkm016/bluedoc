<% content_for :subnav do %>
<div class="user-title">
  <%= user_avatar_tag(@user, style: :small) %>
  <%= user_name_tag(@user) %>
</div>
<% end %>

<div class="user-sidebar aside-content">
  <div class="user-avatar-box">
    <%= user_avatar_tag(@user, style: :large, link: false) %>
  </div>
  <div class="user-name-box">
    <b class="real-name"><%= @user.name %></b>
    <div class="user-name"><%= @user.slug %></div>
    <% if @user.description.present? %>
    <div class="user-bio">
      <%= @user.description %>
    </div>
    <% end %>
    <% if @user.location.present? %>
    <div class="location"><%= @user.location %></div>
    <% end %>
    <div class="created-on"><%= @user.created_at.to_date %></div>
  </div>

  <div class="user-follow">
    <%= follow_user_tag(@user) %>
  </div>

  <%= render_list_items(type: :link, class: "menu-item", check_parameters: true) do |item|
    item << link_to(raw("#{t(".Followers")} <b>#{@user.followers_count}</b>"), @user.to_path("?tab=followers"), class: "menu-item followers") 
    item << link_to(raw("#{t(".Following")} <b>#{@user.following_count}</b>"), @user.to_path("?tab=following"), class: "menu-item following") 
  end %>

  <div class="user-groups menu-item">
    <span class="label">Groups</span>
    <div class="groups-box">
      <% @user.groups.with_attached_avatar.each do |group| %>
        <%= user_avatar_tag(group) %>
      <% end %>
    </div>
  </div>

  <%= render_list_items(type: :link, class: "menu-item", check_parameters: true) do |item|
    item << link_to(t(".Overview"), @user.to_path, class: "menu-item")
    item << link_to(t(".Repositories"), @user.to_path("?tab=repositories"), class: "menu-item")
    item << link_to(t(".Stars"), @user.to_path("?tab=stars"), class: "menu-item")
    item << content_tag(:span, t(".Settings"), class: "menu-item")
    item << link_to(icon_tag("arrow", label: t(".Profile")), account_settings_path, class: "menu-item text-gray")
    item << link_to(icon_tag("arrow", label: t(".Account")), account_account_settings_path, class: "menu-item text-gray")
  end %>
</div>
