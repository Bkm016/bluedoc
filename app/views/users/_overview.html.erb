<div class="user-overview">
  <h1 class="title"><%= t(".Overview") %></h1>
  <h2 class="subhead"><%= t(".Recent activity") %></h2>
  <% if @recent_docs.blank? %>
  <div class="blankslate">
    <p><%= t(".You have no update Doc in recently") %></p>
  </div>
  <% else %>
  <ul class="cards-container recent-docs">
    <% @recent_docs.each do |item| %>
      <li class="card recent-doc-item">
        <div class="path">
          <%= user_display_name_tag(item.subject.repository.user) %> / <%= repository_name_tag(item.subject&.repository) %>
        </div>
        <div class="title">
          <%= doc_title_tag(item.subject) %>
        </div>
        <div class="info">
          <%= timeago item.updated_at %>
        </div>
        <div class="action action-icon">
          <%= link_to icon_tag("edit"), item.subject.to_path("/edit") %>
        </div>
      </li>
    <% end %>
  </ul>
  <% end %>
  <h2 class="subhead"><%= t(".All activity") %></h2>
  <div class="user-activities mt-4">
    <% if @activities.blank? %>
      <div class="blankslate">
        <p><strong><%= @user.name %></strong> <%= t(".no activities") %></p>
      </div>
    <% else %>
      <%= render @activities %>
      <%= render "/shared/more_button" %>
    <% end %>
  </div>
</div>

