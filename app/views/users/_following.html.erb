<div class="user-following">
  <h2 class="sub-title"><%= t(".Following") %></h2>
  <% if @users.blank? %>
    <div class="blankslate">
      <p><%= @user.name %> <%= t(".no following") %></p>
    </div>
  <% else %>
    <ul class="list-container">
      <%= render @users %>
    </ul>
    <%= paginate @users %>
  <% end %>
</div>
