<form class="more-button" action="<%= (defined?(url) ? url : request.fullpath )%>" data-remote="true" method="GET">
  <input type="hidden" name="page" value="<%= (params[:page] || 1).to_i + 1 %>" >
  <input type="hidden" name="format" value="js" >
  <button type="submit" class="btn btn-link btn-block"><%= icon_tag("arrow") %> <%= t(".More") %></button>
</form>